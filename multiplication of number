using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Primenumber
{
    class Program
    {
        static void Main(string[] args)
        {
            int i, sum=0;
            for( i=1;i<10;i++)
            {
                if (i % 3 == 0 || i % 5 == 0)
                {
                    sum = sum + i;
                }
            }
            Console.WriteLine(sum);
            Console.ReadKey();
        }
    }
}
